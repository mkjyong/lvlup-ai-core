{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PerformanceStats",
  "description": "Aggregated performance statistics per user, per game, per period.",
  "type": "object",
  "properties": {
    "user_google_sub": {"type": "string"},
    "game": {"type": "string"},
    "period": {"type": "string", "enum": ["weekly", "monthly"]},
    "period_start": {"type": "string", "format": "date"},
    "period_end": {"type": "string", "format": "date"},
    "metrics": {
      "type": "object",
      "description": "Game-specific KPI values. Keys vary by game.",
      "additionalProperties": {"type": "number"}
    }
  },
  "required": ["user_google_sub", "game", "period", "period_start", "period_end", "metrics"]
} 