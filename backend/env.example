### 기본 애플리케이션 설정
APP_NAME="AI Coach Backend"
DEBUG=false
LOG_LEVEL="INFO"

### DB
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/ai_coach"
AUTO_MIGRATE=true
DB_POOL_SIZE=10

### JWT
JWT_SECRET="please-change-me"
EMAIL_ENC_KEY="base64-32bytes-key"  # 필수: openssl rand -base64 32 | tr '+/' '-_' | head -c 43
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=14

### Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

### RevenueCat / Stripe
REVENUECAT_API_KEY="rc_..."
REVENUECAT_PROJECT_ID=""  # RevenueCat Project ID (Dashboard → Settings)
REVENUECAT_WEBHOOK_SECRET="whsec_..."
REVENUECAT_BASE_URL="https://api.revenuecat.com"

# --------------------
# Slack Webhooks
# --------------------
SLACK_WEBHOOK_SUBSCRIPTION_TRACKER=""
SLACK_WEBHOOK_UNSUBSCRIPTION_TRACKER=""
SLACK_WEBHOOK_ALERT_BACKEND_ERR=""

### 결제 재시도 정책
RETRY_PAYMENT_MAX_ATTEMPTS=2
RETRY_PAYMENT_INTERVAL_HOURS=6

### Redis / Celery
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="${REDIS_URL}"
CELERY_BACKEND_URL="${REDIS_URL}"

### Prometheus
PROMETHEUS_ENABLED=true

### CORS
CORS_ALLOW_ORIGINS="https://app.example.com,https://admin.example.com" 

### 외부 게임 API 키 (선택)
RIOT_API_KEY=""
RIOT_RATE_LIMIT_PER_SEC=18
PUBG_API_KEY=""
PUBG_RATE_LIMIT_PER_SEC=8

### DOMAIN_BASE_URL
DOMAIN_BASE_URL="https://app.example.com" 

### LLM / OpenAI
# OpenAI API Key – Vector Store & Chat Completion 모두 사용
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# Vector Store 식별자 (미설정 시 애플리케이션이 최초 실행 시 자동 생성)
OPENAI_VECTOR_STORE_ID="lvlup-core"
# 백엔드에서 OpenAI Vector Store를 사용하도록 강제하려면 true 로 설정
USE_OPENAI_VECTOR=true 

# OpenAI File Search File IDs (comma-separated)
OPENAI_FILE_IDS_GENERIC=""  # ex) file-abc123,file-def456
OPENAI_FILE_IDS_LOL=""
OPENAI_FILE_IDS_PUBG=""

# -------------------------------------------------------------------
# OpenAI Reusable Prompt IDs (Responses API)
#   Register your system prompts once via the API and paste the IDs.
#   If unset, the backend will raise an error at runtime.
# -------------------------------------------------------------------
PROMPT_ID_GENERIC=
PROMPT_ID_LOL=
PROMPT_ID_PUBG=
# ------------------------------------------------------------------- 