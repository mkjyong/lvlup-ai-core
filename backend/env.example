### 기본 애플리케이션 설정
APP_NAME="AI Coach Backend"
DEBUG=false
LOG_LEVEL="INFO"

### DB
# 개별 값으로 세팅하면 백엔드가 자동으로 DSN을 조합합니다.
DB_HOST="db.<project>.supabase.co"
DB_PORT=5432
DB_NAME="postgres"
DB_USER="postgres"
DB_PASSWORD=""
# Pooler 설정: session | transaction | statement (supabase pooler)
DB_POOL_MODE="session"
# DATABASE_URL 값을 직접 쓰고 싶다면 그대로 지정해도 됩니다.
DATABASE_URL=""
AUTO_MIGRATE=true
DB_POOL_SIZE=10

### JWT
JWT_SECRET="please-change-me"
EMAIL_ENC_KEY="base64-32bytes-key"  # 필수: openssl rand -base64 32 | tr '+/' '-_' | head -c 43
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=14

### Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

### PortOne (아임포트) 설정
# https://developers.portone.io/api/rest-v2
PORTONE_API_SECRET="portone_..."  # 관리자 콘솔 → 결제연동 → V2 API Secret
PORTONE_BASE_URL="https://api.portone.io"
# Webhook 서명 검증용 (선택) – 미설정 시 API_SECRET 사용
PORTONE_WEBHOOK_SECRET="whsec_..."

# --------------------
# Slack Webhooks
# --------------------
SLACK_WEBHOOK_SUBSCRIPTION_TRACKER=""
SLACK_WEBHOOK_UNSUBSCRIPTION_TRACKER=""
SLACK_WEBHOOK_ALERT_BACKEND_ERR=""

### 결제 재시도 정책
RETRY_PAYMENT_MAX_ATTEMPTS=2
RETRY_PAYMENT_INTERVAL_HOURS=6

### Redis / Celery
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="${REDIS_URL}"
CELERY_BACKEND_URL="${REDIS_URL}"

### Prometheus
PROMETHEUS_ENABLED=true

### CORS
CORS_ALLOW_ORIGINS="https://app.example.com,https://admin.example.com" 

### 외부 게임 API 키 (선택)
RIOT_API_KEY=""
RIOT_RATE_LIMIT_PER_SEC=18
PUBG_API_KEY=""
PUBG_RATE_LIMIT_PER_SEC=1

### DOMAIN_BASE_URL
DOMAIN_BASE_URL="https://app.example.com" 

### LLM / Gemini
# Gemini API Key – Google AI Studio 또는 Google Cloud 에서 발급
GEMINI_API_KEY="ga-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

